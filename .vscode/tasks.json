{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C++: clang++ build active Dir",
      "command": "/usr/bin/clang++",
      "args": [
        "-std=c++17",
        "-fdiagnostics-color=always",
        "-Wall",
        "-g",
        "-w",
        "-I${workspaceFolder}/dependencies/include",
        "-L${workspaceFolder}/dependencies/library",
        "${workspaceFolder}/dependencies/library/libglfw.3.3.dylib",
        "${workspaceFolder}/dependencies/library/Vulkan/libvulkan.1.3.231.dylib",

        //    "${workspaceFolder}/testing/window/vulkanWindow/window.cpp",
        "${workspaceFolder}/Engine-Remastered/Main/main.cpp",
        "${workspaceFolder}/Engine-Remastered/Main/app/*.cpp",
        "${workspaceFolder}/Engine-Remastered/Main/app/Constructor/*.cpp",
        "${workspaceFolder}/Engine-Remastered/Main/ProxyFunctions/*.cpp",

        "-o",
        "${workspaceFolder}/builds/app"
        //  "-framework",
        //  "OpenGL",
        //  "-framework",
        //  "Cocoa",
        //  "-framework",
        //  "IOKit",
        //  "-framework",
        //  "CoreVideo",
        //  "-framework",
        //  "CoreFoundation",
        //  "-Wno-deprecated"
      ],
      "options": {
        "cwd": "${fileDirname}",
        "logging": {
          "moduleLoad": false
        }
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: /usr/bin/clang++"
    }
